<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="top.geek_studio.chenlongcould.musicplayer"
    tools:ignore="InnerclassSeparator">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <service
            android:name=".Service.MyMusicService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".Activities.MusicDetailActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".BroadCasts.ReceiverOnMusicPlay"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="top.geek_studio.chenlongcould.musicplayer.ReceiverOnMusicPlay" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".BroadCasts.ReceiverOnMusicPause"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="top.geek_studio.chenlongcould.musicplayer.ReceiverOnMusicPause" />
            </intent-filter>
        </receiver>

        <activity android:name=".Activities.PublicActivity"></activity>
    </application>

</manifest>