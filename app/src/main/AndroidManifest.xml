<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="top.geek_studio.chenlongcould.musicplayer"
    tools:ignore="InnerclassSeparator">

    <permission
        android:name="top.geek_studio.chenlongcould.musicplayer.BroadCasts"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="top.geek_studio.chenlongcould.musicplayer.BroadCasts" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/GreenTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/SplashActivityTheme" />

        <service
            android:name=".Service.MyMusicService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".Activities.MusicDetailActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/MusicDetailTheme" />
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/SplashActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".BroadCasts.ReceiverOnMusicPlay"
            android:enabled="true"
            android:exported="true"
            android:permission="top.geek_studio.chenlongcould.musicplayer.BroadCasts">
            <intent-filter>
                <action android:name="top.geek_studio.chenlongcould.musicplayer.BroadCasts.ReceiverOnMusicPlay" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".BroadCasts.ReceiverOnMusicPause"
            android:enabled="true"
            android:exported="true"
            android:permission="top.geek_studio.chenlongcould.musicplayer.BroadCasts">
            <intent-filter>
                <action android:name="top.geek_studio.chenlongcould.musicplayer.BroadCasts.ReceiverOnMusicPause" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".BroadCasts.MyHeadSetPlugReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="top.geek_studio.chenlongcould.musicplayer.BroadCasts">
            <intent-filter>
                <action android:name="android.intent.action.HEADSET_PLUG" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".Activities.PublicActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AlbumDetailActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activities.SettingsActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activities.AboutLic"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/CommonActivityTheme" />

    </application>

</manifest>