<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="top.geek_studio.chenlongcould.musicplayer"
    tools:ignore="InnerclassSeparator">

    <permission
        android:name="top.geek_studio.chenlongcould.musicplayer.broadcasts"
        android:protectionLevel="signature" />
    <permission
        android:name="top.geek_studio.chenlongcould.musicplayer.MyMusicService"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="top.geek_studio.chenlongcould.musicplayer.broadcasts" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="top.geek_studio.chenlongcould.musicplayer.Service.MyMusicService" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:theme="@style/LightTheme"
        tools:replace="android:allowBackup">
        <activity
            android:name=".activity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/LightTheme.NoActionBar"></activity>

        <receiver
            android:name=".broadcasts.NotificationBroadcast"
            android:enabled="true"
            android:exported="true"
            android:permission="top.geek_studio.chenlongcould.musicplayer.BroadCasts"
            android:process=":musicService" />

        <service
            android:name=".MyDBSync"
            android:exported="false" />

        <activity
            android:name=".activity.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/LightTheme.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/LightTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/SplashActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PublicActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AlbumDetailActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.SettingsActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.AboutLic"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.CarViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_car_view"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".activity.ThemeActivity"
            android:label="@string/title_activity_theme"
            android:launchMode="singleTask" />
        <activity android:name=".activity.TestActivity" />
        <activity
            android:name=".activity.AboutActivity"
            android:exported="false"
            android:launchMode="singleTask" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>

        <service
            android:name=".MyTile"
            android:icon="@drawable/ic_audiotrack_24px"
            android:label="@string/fast_play"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".MyMusicService"
            android:enabled="true"
            android:exported="false"
            android:process=":musicService" />

        <receiver
            android:name=".broadcasts.ReceiverOnMusicPlay"
            android:enabled="true"
            android:exported="true"
            android:permission="top.geek_studio.chenlongcould.musicplayer.broadcasts">
            <intent-filter>
                <action android:name="top.geek_studio.chenlongcould.musicplayer.broadcasts.ReceiverOnMusicPlay" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcasts.ReceiverOnMusicPause"
            android:enabled="true"
            android:exported="true"
            android:permission="top.geek_studio.chenlongcould.musicplayer.broadcasts">
            <intent-filter>
                <action android:name="top.geek_studio.chenlongcould.musicplayer.broadcasts.ReceiverOnMusicPause" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcasts.MyHeadSetPlugReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="top.geek_studio.chenlongcould.musicplayer.broadcasts">
            <intent-filter>
                <action android:name="android.intent.action.HEADSET_PLUG" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1302949087387063~1079129255" />
    </application>

</manifest>